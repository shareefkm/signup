<div class=" row p-5 bg-info loginMan">
<div class="d-flex justify-content-center p-5 text-white">
    <form class="bg-dark p-5 rounded" action="/submit" method="post">
  <div class="mb-3">
    {{#if emailErr}}
    <p class="text-danger">Invalid Email</p>
    {{/if}}
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    {{#if passwordnErr}}
      <p class="text-danger">Invalid Password</p>
    {{/if}}
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>
